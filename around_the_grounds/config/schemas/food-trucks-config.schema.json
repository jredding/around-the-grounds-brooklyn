{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "FoodTrucksConfig",
  "type": "object",
  "required": ["list_name", "target_repo", "venues"],
  "properties": {
    "list_name": {"type": "string"},
    "target_repo": {"type": "string"},
    "target_branch": {"type": "string", "default": "main"},
    "target_url": {"type": "string"},
    "template_dir": {"type": "string"},
    "venues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["key", "name", "url", "source_type"],
        "properties": {
          "key": {"type": "string"},
          "name": {"type": "string"},
          "url": {"type": "string"},
          "source_type": {"type": "string", "enum": ["html", "ical", "api"]},
          "timezone": {"type": "string"},
          "parser_config": {"type": "object"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
